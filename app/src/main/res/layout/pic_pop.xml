<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_right_click_bg"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/compile_cancel"
        android:textColor="@color/white" />

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cancel"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zircon" />

        <TextView
            android:id="@+id/compile_photo_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/club_btn_bg"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/compile_photo" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/zircon" />

        <TextView
            android:id="@+id/compile_camera_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/club_btn_bg"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/compile_camera" />


    </LinearLayout>
</RelativeLayout>