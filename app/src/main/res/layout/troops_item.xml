<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/troops_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="10dp"
        android:src="@mipmap/app_icon" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/troops_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="骑行队名称"
                android:textColor="@color/rangoon_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/troops_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/troops_lv"
                android:paddingBottom="3dp"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:paddingTop="3dp"
                android:text="LV1"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/troops_id"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/troops_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1233456"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/troops_num"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/troops_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1233"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/troops_people"
                android:textSize="12sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/troops_introduce"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:gravity="bottom"
            android:lines="2"
            android:layout_marginBottom="5dp"
            android:text="骑行队介绍骑行队介绍骑行队介绍骑行队介绍"
            android:textSize="10sp" />
    </LinearLayout>
</LinearLayout>