<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="@dimen/margin_10"
        >
        
        <LinearLayout 
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:background="@drawable/device_manager_bg"
	        android:padding="@dimen/margin_10"
            >
            <ListView
                android:id="@+id/list_device"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@null"
                android:dividerHeight="0dp"
                android:scrollbars="none"
                android:cacheColorHint="@android:color/transparent"
                ></ListView>
            
            <RadioGroup
                android:id="@+id/radio_group_bottle"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/device_bottom"
                android:gravity="center_vertical"
                android:padding="@dimen/margin_5"
                >
                <RadioButton 
                    android:id="@+id/radio_nurse_bottle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/nurse_bottle"
                    android:textSize="@dimen/text_size_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_selector"
                    android:checked="true"
                    />
                <View 
                    android:layout_height="fill_parent"
                    android:layout_width="1dp"
                    android:background="#A7A7A7"
                    />
                <RadioButton 
                    android:id="@+id/radio_water_bottle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:text="@string/water_bottle"
                    android:textSize="@dimen/text_size_20"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/text_selector"
                    />
            </RadioGroup>
            
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
