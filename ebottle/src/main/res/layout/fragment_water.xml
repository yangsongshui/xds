<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin_10"
        >
        
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"            
            >
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                >
	            <ImageView 
	                android:id="@+id/img_water"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:src="@drawable/icon_water"
	                android:scaleType="fitXY"
	                />
	            <TextView 
	                android:id="@+id/txt_water"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/water"
	                android:textColor="@color/brown"
	                android:textSize="@dimen/text_size_22"
	                android:layout_marginLeft="@dimen/margin_10"
	                />
            </LinearLayout>
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_20"
                >
	            <Button 
	                android:id="@+id/btn_syn"
	                android:layout_width="@dimen/margin_60"
	                android:layout_height="@dimen/margin_30"
	                android:text="@string/sync"
	                android:textColor="@color/white"
	                android:textSize="@dimen/text_size_16"
	                android:background="@drawable/btn_water_selector"
	                />
            </LinearLayout>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/margin_10"
            >
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip5"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_16"
                />
        </LinearLayout>  
         <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/brown" 
            android:layout_marginTop="@dimen/margin_10"
            />
    </LinearLayout>
    
    <!-- 饮水时间 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        android:orientation="vertical"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
	         <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/water_time"
	                android:textColor="@color/black"
	                android:textSize="@dimen/text_size_16"
	                />
	         <RelativeLayout 
	             android:layout_width="@dimen/margin_160"
	             android:layout_height="@dimen/margin_30"
	             android:background="@drawable/time_bg"
	             android:padding="@dimen/margin_5"
	             >
	             <TextView 
	                android:id="@+id/txt_water_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="2015年05月19日"
	                android:textColor="@color/white"
	                android:textSize="@dimen/text_size_12"
	                android:layout_centerVertical="true"
	                android:layout_alignParentLeft="true"
	                />
	             <EditText
	                android:id="@+id/edit_water_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="10:18"
	                android:textColor="@color/gray"
	                android:textSize="@dimen/text_size_16"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="@dimen/margin_10"
	                android:background="@null"
	                />
	         </RelativeLayout>

	         <LinearLayout
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:gravity="center_vertical"
	             >

	             <ToggleButton
	                 android:id="@+id/toggle_water_time"
	                 android:layout_width="@dimen/margin_25"
	                 android:layout_height="@dimen/margin_25"
	                 android:layout_marginLeft="@dimen/margin_10"
	                 android:background="@drawable/sex_selector"
	                 android:button="@null" 
	                 android:textOn=""
	                 android:textOff=""
	                 />

	             <TextView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="@dimen/margin_10"
	                 android:text="@string/def"
	                 android:textColor="@color/black"
	                 android:textSize="@dimen/text_size_16" />
	         </LinearLayout>

        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center"
            android:orientation="vertical"
            >
             <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="@dimen/margin_10"
	               android:text="@string/tip6"
	               android:textColor="@color/gray"
	               android:textSize="@dimen/text_size_14" />
            
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/brown"
            />
        
    </LinearLayout>
    <!-- 平均水温 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10"
        android:orientation="vertical"
        >
        
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
	         <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/average_water_temp"
	                android:textColor="@color/black"
	                android:textSize="@dimen/text_size_16"
	                />
	          <LinearLayout 
	             android:layout_width="@dimen/margin_80"
	             android:layout_height="@dimen/margin_30"
	             android:background="@drawable/temp_bg"
	             android:padding="@dimen/margin_5"
	             android:gravity="center"
	             >
	             <TextView 
	                 android:id="@+id/txt_ave_temp"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:text="0"
	                 android:textColor="@color/black"
	                 android:textSize="@dimen/text_size_16"
	                 android:layout_marginRight="@dimen/margin_10"
	                 />
	          </LinearLayout>
	          <ImageView 
	              android:layout_width="@dimen/margin_20"
	              android:layout_height="@dimen/margin_20"
	              android:src="@drawable/icon_alert"
	              android:scaleType="fitXY"
	              android:layout_marginLeft="@dimen/margin_10"
	              />
	          <TextView 
	                android:id="@+id/txt_temp_alert"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/temp_suitable"
	                android:textColor="@color/brown"
	                android:textSize="@dimen/text_size_16"
	                android:layout_marginLeft="@dimen/margin_10"
	                />
        </LinearLayout>
         <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_50"
            android:gravity="center"
            android:orientation="vertical"
            >
             <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="@dimen/margin_10"
	               android:text="@string/tip7"
	               android:textColor="@color/gray"
	               android:textSize="@dimen/text_size_14" />
            
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/brown"
            />
    
    </LinearLayout>
    
    <!-- 饮水量 -->
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_10"
        android:paddingRight="@dimen/margin_10"
        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
	         <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/water_intake"
	                android:textColor="@color/black"
	                android:textSize="@dimen/text_size_16"
	                />
	         
	            <RelativeLayout 
	                   android:layout_width="@dimen/margin_100"
	                   android:layout_height="@dimen/margin_30"
	                   android:layout_marginLeft="@dimen/margin_17"
	                   android:background="@drawable/spinner_bg"
	                   
	                   >
	                  <TextView 
	                      android:id="@+id/txt_water_intake"
	                      android:layout_width="@dimen/margin_80"
	                      android:layout_height="wrap_content"
	                      android:text="10ML"
	                      android:textColor="@color/black"
	                      android:textSize="@dimen/text_size_18"
	                      android:layout_alignParentLeft="true"
	                      android:layout_centerVertical="true"
	                      
	                      />
		               <ImageButton
		                   android:id="@+id/img_water_intake_arrow"
		                   android:layout_width="@dimen/margin_15"
		                   android:layout_height="@dimen/margin_15"
		                   android:scaleType="fitXY"
		                   android:layout_marginRight="3dp"
		                   android:background="@drawable/arrow_seletor"
		                   android:layout_alignParentRight="true"
		                   android:layout_centerVertical="true"
		                   
		                   />
	           </RelativeLayout>
	         
        </LinearLayout>
        
        <!-- 结束时间 -->
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/margin_10"
            >
	         <TextView 
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="@string/end_time"
	                android:textColor="@color/black"
	                android:textSize="@dimen/text_size_16"
	                />
	         <RelativeLayout 
	             android:layout_width="@dimen/margin_160"
	             android:layout_height="@dimen/margin_30"
	             android:background="@drawable/time_bg"
	             android:padding="@dimen/margin_5"
	             >
	             <TextView 
	                android:id="@+id/txt_water_end_date"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="2015年05月19日"
	                android:textColor="@color/white"
	                android:textSize="@dimen/text_size_12"
	                android:layout_centerVertical="true"
	                android:layout_alignParentLeft="true"
	                />
	             <EditText
	                android:id="@+id/edit_water_end_time"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:text="10:18"
	                android:textColor="@color/gray"
	                android:textSize="@dimen/text_size_16"
	                android:layout_centerVertical="true"
	                android:layout_alignParentRight="true"
	                android:layout_marginRight="@dimen/margin_10"
	                android:background="@null"
	                />
	         </RelativeLayout>

	         <LinearLayout
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:gravity="center_vertical"
	             >

	             <ToggleButton
	                 android:id="@+id/toggle_water_end_time"
	                 android:layout_width="@dimen/margin_25"
	                 android:layout_height="@dimen/margin_25"
	                 android:layout_marginLeft="@dimen/margin_10"
	                 android:background="@drawable/sex_selector"
	                 android:button="@null" 
	                 android:textOn=""
	                 android:textOff=""
	                 />

	             <TextView
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="@dimen/margin_10"
	                 android:text="@string/def"
	                 android:textColor="@color/black"
	                 android:textSize="@dimen/text_size_16" />
	         </LinearLayout>

        </LinearLayout>
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="@dimen/margin_40"
            android:gravity="center"
            android:orientation="vertical"
            >
             <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_marginLeft="@dimen/margin_10"
	               android:text="@string/tip6"
	               android:textColor="@color/gray"
	               android:textSize="@dimen/text_size_14" />
            
        </LinearLayout>
        <View 
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/brown"
            />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_10"
        >
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip8"
            android:textColor="@color/brown"
            android:textSize="@dimen/text_size_16"
            />
         <TextView 
            android:layout_marginTop="@dimen/margin_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tip9"
            android:textColor="@color/brown"
            android:textSize="@dimen/text_size_16"
            />
         <LinearLayout 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_30"
                android:paddingRight="@dimen/margin_30"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_30"
                >
	            <Button 
	                android:padding="@dimen/margin_5"
	                android:id="@+id/btn_save_update"
	                android:layout_width="fill_parent"
	                android:layout_height="wrap_content"
	                android:text="@string/save_update"
	                android:textColor="@color/white"
	                android:textSize="@dimen/text_size_20"
	                android:background="@drawable/btn_water_selector"
	                />
            </LinearLayout>
    </LinearLayout>
   </LinearLayout>
 </ScrollView>
  
</LinearLayout>
