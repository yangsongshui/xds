<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="AnimationActivityStyle" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="@android:windowAnimationStyle">@style/MyActivitAnim</item> 
    </style>
    <style name="MyActivitAnim" parent="@android:style/Animation.Activity">
        <item name="@android:activityOpenEnterAnimation">@anim/activity_in_right</item>
        <item name="@android:activityOpenExitAnimation">@anim/activity_out_left</item>
    </style>
    
    <style name="MySpinner" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:popupBackground">@drawable/bg</item>
        <item name="android:clickable">false</item>
    </style>
    
    <style  name="CustomDialogStyle" parent="@android:style/Theme.Dialog" >
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
          <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/custom_dialog_bg</item>
        <item name="android:backgroundDimEnabled">true</item>
        
    </style>
    
    
    
</resources>
